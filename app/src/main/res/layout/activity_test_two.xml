<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TestTwoActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/twotitlebg"
            android:id="@+id/imageViewBgndTwoTest"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitXY"/>
    <ImageButton
            android:layout_width="64dp"
            android:layout_height="58dp" app:srcCompat="@drawable/profile"
            android:id="@+id/homeBtn" android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@+id/imageViewBgndTwoTest"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:onClick="goToMenuActivity"/>
    <TextView
            android:layout_width="371dp"
            android:layout_height="123dp"
            android:id="@+id/textView6"
            android:textAllCaps="false"
            android:textSize="24sp" android:textAlignment="center"
            android:textColor="@android:color/white"
            app:autoSizeMaxTextSize="24sp" app:autoSizeMinTextSize="16sp" android:lines="4"
            android:text="Тест№2 \n Совместимость в характерах, привычках, отношение к жизни и социуму."
            android:layout_marginTop="112dp"
            app:layout_constraintTop_toBottomOf="@+id/homeBtn" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.666"/>
    <TextView
            android:layout_width="334dp"
            android:layout_height="0dp"
            android:id="@+id/textView7"
            android:textColor="@android:color/white"
            android:textSize="18sp" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.584" android:lines="1"
            app:autoSizeMaxTextSize="24sp" app:autoSizeMinTextSize="16sp"
            android:text="(Можно выбрать 1-2 варианта ответа)"
            app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <Button
            android:text="    Начать тест"
            android:layout_width="417dp"
            android:layout_height="65dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/startTwoTestBtn" android:textAllCaps="false" android:background="@drawable/opactiybtn"
            android:textColor="@android:color/white" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintVertical_bias="1.0"
            android:textSize="22sp" android:onClick="goTestTwo"/>
</androidx.constraintlayout.widget.ConstraintLayout>