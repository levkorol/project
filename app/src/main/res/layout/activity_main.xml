<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/enterbg"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitXY"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="86dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:textColor="@android:color/white"
            android:text="Тест на совместимость      от психотерапевта" android:textSize="30sp"
            android:textAlignment="center" android:lines="2" app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="15sp"/>
    <Button
            android:text="Начать тест"
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/opactiybtn" android:textColor="@android:color/white" android:textSize="24sp"
            android:textAllCaps="false" android:textStyle="bold" app:layout_constraintHorizontal_bias="0.0"
            android:onClick="goToNextActivity"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/editTextMainText" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button"
            android:textColor="@android:color/white"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:text="Представьте, что вы в космосе и вам нужно выбрать планету для счастливой жизни и узнать о ней всё от самого её зарождения. Каждая душа человека - это как целая планета, которая приобретает за свою жизнь опыт и своё восприятие мира. Этот тест своего рода полное познание вашего партнёра и даже вас самих в различных сферах жизни. Тест разработан психотерапевтом результаты которого самые точные исходя от вашей индивидуальной психологии и взаимодействии в ваших отношениях. Отвечая откровенно на вопросы,
начало у вас отношений или вы уже вместе длительное время, в любом случае узнаете о друг друге много нового и важного. Необходимо отвечать на вопросы вместе и обговаривать их. Скачайте приложение на два устройства и одному из партнёров необходимо ввести код другого партнёра. Тест состоит из трёх частей и в конце каждой вас ждёт результат. Удачи!"
            android:textSize="19sp"
            app:autoSizeMaxTextSize="19sp" app:autoSizeMinTextSize="16sp"
            android:scrollbars="vertical" android:ems="10"
            android:textAlignment="viewStart" android:clickable="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>