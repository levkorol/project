<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HoroscopeActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/enterbg"
            android:id="@+id/imageViewMenuBgrnd"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"/>
    <ImageButton
            android:layout_width="54dp"
            android:layout_height="48dp" app:srcCompat="@drawable/profile"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/homeBtn"
            android:background="@android:color/transparent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:scaleType="fitXY" android:layout_marginTop="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewResults" app:layout_constraintVertical_bias="0.0"
            android:onClick="goToMenuActivity"/>
    <TextView
            android:text="Гороскоп на 31 августа"
            android:layout_width="281dp"
            android:layout_height="39dp"
            android:id="@+id/textViewTitle" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/homeBtn" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageViewMenuBgrnd" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/homeBtn" android:textColor="@android:color/holo_blue_bright"
            android:textSize="22sp" android:layout_marginTop="32dp" android:textAlignment="textStart"
            app:autoSizeMinTextSize="15sp" app:autoSizeMaxTextSize="22sp"/>
    <TextView android:layout_width="295dp"
              android:layout_height="591dp"
              android:id="@+id/textViewContent" android:textSize="20sp"
              app:layout_constraintTop_toBottomOf="@+id/homeBtn" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="@+id/imageViewMenuBgrnd"
              app:layout_constraintStart_toStartOf="@+id/imageViewMenuBgrnd"
              app:layout_constraintEnd_toEndOf="@+id/imageViewMenuBgrnd" android:layout_marginEnd="8dp"
              android:textColor="@android:color/white" android:layout_marginTop="8dp"
              android:scrollbars="vertical" android:textAlignment="center" android:text="Загрузка..."
              android:gravity="center_vertical"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="381dp"
            android:layout_height="555dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTitle" android:id="@+id/recyclerViewHoroscopeItems"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/imageViewMenuBgrnd"
            app:layout_constraintHorizontal_bias="0.487"/>

</androidx.constraintlayout.widget.ConstraintLayout>