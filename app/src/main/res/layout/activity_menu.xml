<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/imageViewMenuBgrnd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/enterbg" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="100"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_weight="10"
            android:lines="2"
            android:text="Тест на совместимость от психотерапевта"
            android:textAlignment="center"
            android:textColor="#22CED4"
            android:textSize="19sp"
            app:autoSizeMaxTextSize="23sp"
            app:autoSizeMinTextSize="15sp" />

        <Button
            android:id="@+id/testOneButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="10"
            android:background="@android:color/transparent"
            android:lines="4"
            android:onClick="goToTestOneTitle"
            android:text="Тест№1 \n Совместимость темпераментов, любви, браке, взаимоотношений в семье"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <Button
            android:id="@+id/testTwoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="10"
            android:background="@android:color/transparent"
            android:onClick="goToTestTwoActivity"
            android:text="Тест№2 \n Совместимость в характерах, привычках, интересах, отношении к жизни и социуму"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:visibility="visible"
            tools:lines="4"
            tools:textAlignment="center" />

        <Button
            android:id="@+id/testThreeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="10"
            android:background="@android:color/transparent"
            android:onClick="goToTestThreeActivity"
            android:text=" Тест№3 \n Совместимость взглядов в саморазвитии, отношении к здоровью и финансовой сфере жизни"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <Button
            android:id="@+id/goroBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="10"
            android:background="@android:color/transparent"
            android:onClick="goToHoroscope"
            android:text="Ежедневный гороскоп"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="5"
            android:text="Для того что бы пройти тесты, необходимо подключение к устройству партнёра, введите код Вашего партнёра или он Ваш. "
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="12sp"
            app:autoSizeMaxTextSize="13sp"
            app:autoSizeMinTextSize="12sp" />

        <TextView
            android:id="@+id/textViewSelfCode"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="10"
            android:lines="1"
            android:text="Ваш код: wwwwwwwwwwww"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            app:autoSizeMaxTextSize="24sp"
            app:autoSizeMinTextSize="14sp" />

        <Button
            android:id="@+id/buttonSendCode"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="10"
            android:background="@drawable/button"
            android:onClick="sendCodeOnClick"
            android:text="Отправить код"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp" />



        <EditText
            android:id="@+id/editTextPartnerCode"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="10"
            android:ems="10"
            android:hint="Введите код партнёра здесь..."
            android:inputType="textMultiLine"
            android:minEms="5"
            android:textAlignment="textStart"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/tertiary_text_light"
            android:textSize="17sp" />

        <Button
            android:id="@+id/okBtn"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="10"
            android:background="@drawable/opactiybtn"
            android:elevation="3dp"
            android:onClick="okBtnOnClick"
            android:text="Подтвердить код"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>