<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cv" app:cardBackgroundColor="@android:color/transparent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">
            <TextView android:id="@+id/textViewZodiacName" android:text="Знак зодиака"
                      android:layout_width="383dp" android:layout_height="wrap_content"
                      android:textColor="@android:color/white"
                      android:visibility="visible" android:textSize="19sp" android:textStyle="bold"/>
            <TextView android:id="@+id/textViewPrediction" android:text="Прогноз"
                      android:layout_width="383dp" android:layout_height="wrap_content"
                      android:textColor="@android:color/white"
                      android:visibility="visible" android:textSize="16sp"
                      android:layout_below="@id/textViewZodiacName" android:layout_marginTop="16dp"/>
            <View android:id="@+id/divider2"
                  android:layout_width="match_parent"
                  android:layout_height="3dp"
                  android:background="?android:attr/listDivider"
                  android:layout_marginTop="19dp" android:layout_below="@+id/textViewPrediction"
                  android:foreground="@android:color/white"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
